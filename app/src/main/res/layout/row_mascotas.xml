<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/card_view_mascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/ivPerro"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/uno"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:id="@+id/rlLike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/ivHuesoLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hueso"

                />
            <TextView
                android:id="@+id/tvNombrePerro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perro"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/ivHuesoLike"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/ivHuesosRaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/huesoama"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/tvConteoLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/ivHuesosRaiting"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>