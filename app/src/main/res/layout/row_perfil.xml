<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"

    android:layout_marginTop="10dp"

    android:id="@+id/card_view_perfil"
    android:layout_width="100dp"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="3dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/ivPerroPerfil"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/uno"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:id="@+id/rlLikePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/ivHuesosRaitingPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/huesoama"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/tvConteoLikesPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/ivHuesosRaitingPerfil"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>